<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="PhotoFileDao">

  <select id="findAll"
          parameterType="int" 
          resultType="com.eomcs.lms.domain.PhotoFile">
    select 
      photo_file_id no, 
      photo_id boardNo, 
      file_path filePath
    from 
      lms_photo_file
    where 
      photo_id=#{value}
    order by 
      photo_file_id asc
  </select>
  
  <insert id="insert" 
          parameterType="com.eomcs.lms.domain.PhotoFile">
    insert into lms_photo_file(photo_id, file_path)
    values(#{boardNo},#{filePath})
  </insert>
  
  <delete id="deleteAll" parameterType="int">
    delete from lms_photo_file
    where photo_id=#{value}
  </delete>

</mapper>




