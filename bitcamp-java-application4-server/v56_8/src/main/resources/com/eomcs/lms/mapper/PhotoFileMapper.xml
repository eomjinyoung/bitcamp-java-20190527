<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eomcs.lms.dao.PhotoFileDao">

  <resultMap type="PhotoFile" id="PhotoFileMap">
    <id column="photo_file_id" property="no"/>
    <result column="photo_id" property="boardNo"/>
    <result column="file_path" property="filePath"/>
  </resultMap>
  
  <select id="findAll" parameterType="int" resultMap="PhotoFileMap">
    select 
      photo_file_id, 
      photo_id, 
      file_path
    from 
      lms_photo_file
    where 
      photo_id=#{value}
    order by 
      photo_file_id asc
  </select>
  
  <insert id="insert" parameterType="PhotoFile">
    insert into lms_photo_file(photo_id, file_path)
    values(#{boardNo},#{filePath})
  </insert>
  
  <delete id="deleteAll" parameterType="int">
    delete from lms_photo_file
    where photo_id=#{value}
  </delete>

</mapper>




